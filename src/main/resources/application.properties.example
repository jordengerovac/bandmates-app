DATABASE_HOST=localhost

spring.datasource.username=${your-db-username}
spring.datasource.password=${your-db-password}
spring.datasource.url=jdbc:mysql://${DATABASE_HOST}:3306/bandmates
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

bandmates.baseUrl=https://fervent-goldstine-bb072c.netlify.app

jwt.secret=${your-jwt-secret}

spotify.clientId=${your-spotify-client-id}
spotify.clientSecret=${your-spotify-client-secret}
spotify.redirectUri=https://fervent-goldstine-bb072c.netlify.app/connect-spotify
spotify.tokenUrl=https://accounts.spotify.com/api/token
spotify.recentlyPlayedUrl=https://api.spotify.com/v1/me/player/recently-played
spotify.topArtistsUrl=https://api.spotify.com/v1/me/top/artists
spotify.topTracksUrl=https://api.spotify.com/v1/me/top/tracks
spotify.recommendationsUrl=https://api.spotify.com/v1/recommendations

spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=${your-smtp-email-address}
spring.mail.password=${your-smtp-email-password}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# https stuff
# server.port=8080
# The format used for the keystore. It could be set to JKS in case it is a JKS file
# server.ssl.key-store-type=PKCS12
# The path to the keystore containing the certificate
# server.ssl.key-store=keystore/baeldung.p12
# The password used to generate the certificate
# server.ssl.key-store-password=password
# The alias mapped to the certificate
# server.ssl.key-alias=baeldung